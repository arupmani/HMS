
@model List<HMSClient.DomainViewModel.BookingViewModel>
<h1 class="display-4">My Bookings Page</h1>


@if (TempData["RoomBookedSuccessMessage"] != null)
{
    @TempData["RoomBookedSuccessMessage"]
}

<table cellpadding="0" cellspacing="0" border="1">
    <tr style="background-color:yellow">
        <th>Booking Date</th>
        <th>Room No</th>
        <th>Room Type</th>
    </tr>
    @foreach (HMSClient.DomainViewModel.BookingViewModel booking in Model)
    {
        <tr>
            <td>@booking.BookingDate</td>
            <td>@booking.RoomNo</td>
            <td>@booking.RoomType</td>
        </tr>
    }
</table>
